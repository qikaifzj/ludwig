##############################################################################
#
#  Fene smoke test 3
#
#  From input, three particles, two bonds, one angle.
#
##############################################################################

N_cycles 20

##############################################################################
#
#  System and MPI
# 
##############################################################################

size 16_16_16
reduced_halo no

##############################################################################
#
#  Fluid parameters
#
##############################################################################

isothermal_fluctuations off
ghost_modes off

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy none

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        input_three

colloid_one_a0      1.25
colloid_one_ah      1.25
colloid_one_r       6.0_6.0_6.0
colloid_one_nbonds  2
colloid_one_bond1   2
colloid_one_bond2   3
colloid_one_nangles 1

colloid_two_a0      1.25
colloid_two_ah      1.25
colloid_two_r       6.0_6.0_3.1
colloid_two_nbonds  1
colloid_two_bond1   1

colloid_three_a0     1.25
colloid_three_ah     1.25
colloid_three_r      6.0_6.1_8.7
colloid_three_nbonds 1
colloid_three_bond1  1

bond_fene_on        1
bond_fene_k         0.0000
bond_fene_r0        3.0

angle_cosine_on     1
angle_cosine_k      0.0001

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

boundary_walls_on no
periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 20
freq_measure    10000000
freq_config     10000000
colloid_io_freq 10000000
config_at_end no

###############################################################################
#
#  Miscellaneous
#
#  random_seed  +ve integer is the random number generator seed
#
###############################################################################

random_seed 8361235

