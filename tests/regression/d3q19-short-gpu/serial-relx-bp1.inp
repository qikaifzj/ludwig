##############################################################################
#
#  BPI relaxation only.
#
##############################################################################

N_cycles 100

##############################################################################
#
#  System and MPI
# 
##############################################################################

size 32_32_32
grid 2_2_2

##############################################################################
#
#  Fluid parameters
#
##############################################################################

hydrodynamics off

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy lc_blue_phase
fd_gradient_calculation 3d_7pt_fluid

###############################################################################
#
#  Blue Phase free energy
#
###############################################################################

lc_a0         0.014384711
lc_gamma      3.1764706
lc_q0         0.27768018
lc_kappa0     0.01
lc_kappa1     0.01

lc_xi         0.7
lc_Gamma   0.1

lc_q_initialisation o8m
lc_q_init_amplitude -0.2
lc_init_redshift 0.83
lc_anchoring_method none

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        no_colloids

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

boundary_walls_on no
periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 100
config_at_end no

###############################################################################
#
#  Miscellaneous
#
#  random_seed  +ve integer is the random number generator seed
#
###############################################################################

random_seed 8361235
