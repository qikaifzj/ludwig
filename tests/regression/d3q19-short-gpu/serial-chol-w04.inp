##############################################################################
#
#  Wall anchoring (fixed) smake test: default orientation (0,1,0)
#
##############################################################################

N_cycles 2

##############################################################################
#
#  System and MPI
# 
##############################################################################

size 32_32_64
grid 2_2_2
reduced_halo no

##############################################################################
#
#  Fluid parameters
#
##############################################################################

viscosity 1.0

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy lc_blue_phase

fd_advection_scheme_order 1
fd_gradient_calculation 3d_7pt_solid

lc_a0      0.01
lc_gamma   3.0
lc_q0      0.19635
lc_kappa0  0.000648456
lc_kappa1  0.000648456
lc_xi      0.7

lc_Gamma   0.5

lc_q_initialisation        nematic
lc_q_init_amplitude        0.333333333333333
lc_init_redshift           1.0
lc_init_nematic            1.0_1.0_1.0

lc_anchoring_method        two
lc_wall_anchoring          fixed
lc_anchoring_strength      0.002593824

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init     none

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

boundary_walls_on yes
boundary_walls 0_0_1
periodicity 1_1_0

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 2
config_at_end no

colloid_io_freq 10000000

###############################################################################
#
#  Miscellaneous
#
###############################################################################

random_seed 8361235
