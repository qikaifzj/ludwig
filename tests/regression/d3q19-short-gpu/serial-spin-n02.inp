##############################################################################
#
#  Symmetric + noise free energy "symmetric_noise" smoke test
#
#  This adds noise in the density sector cf serial-spin-n01
#
##############################################################################

##############################################################################
#
#  Run duration
#
###############################################################################

N_cycles 10

##############################################################################
#
#  System
#
##############################################################################

size 64_64_64
grid 2_2_2

##############################################################################
#
#  Fluid parameters
#
##############################################################################

viscosity 0.00625
temperature 0.000001
isothermal_fluctuations on
ghost_modes off

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy symmetric_noise

A -0.00625
B 0.00625
K 0.004
C 0.0

phi0 0.0
phi_initialisation    spinodal
mobility 1.25

fd_gradient_calculation 3d_27pt_fluid
fd_advection_scheme_order 1

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        no_colloids

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 10
config_at_end no

###############################################################################
#
#  Miscellaneous
#
#  random_seed  +ve integer is the random number generator seed
#
###############################################################################

random_seed 8361235
