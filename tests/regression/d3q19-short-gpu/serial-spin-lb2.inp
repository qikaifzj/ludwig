##############################################################################
#
#  Spinodal + lattice Boltzmann + flat walls (box) smoke test.
#
##############################################################################

##############################################################################
#
#  Run duration
#
###############################################################################

N_cycles 40

##############################################################################
#
#  System
#
##############################################################################

size 32_32_32
grid 2_2_2
periodicity 0_0_0

##############################################################################
#
#  Fluid parameters
#
##############################################################################

viscosity 0.00625

ghost_modes off

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy symmetric_lb

A -0.00625
B 0.00625
K 0.004
C 0.0

phi0 0.0
phi_initialisation    spinodal
mobility 3.75

fd_gradient_calculation 3d_27pt_solid

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        no_colloids

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

boundary_walls 1_1_1
boundary_speed_bottom 0.0
boundary_speed_top    0.0

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 40
config_at_end no

###############################################################################
#
#  Miscellaneous
#
#  random_seed  +ve integer is the random number generator seed
#
###############################################################################

random_seed 8361235
