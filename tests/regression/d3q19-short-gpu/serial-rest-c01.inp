##############################################################################
#
#  Colloid + fluid restart smoke test part 1.
#  I/O is default (binary)
#
##############################################################################

N_cycles 20

##############################################################################
#
#  System and MPI
# 
##############################################################################

size 64_64_64
reduced_halo no

##############################################################################
#
#  Fluid parameters
#
##############################################################################

free_energy none

viscosity 0.1
viscosity_bulk 0.1

isothermal_fluctuations off
temperature 0.00002133333

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init     input_one

colloid_one_a0   2.3
colloid_one_ah   2.3
colloid_one_r    64.0_64.0_32.0
colloid_one_v    0.043478261_0.03_0.03

colloid_gravity  0.0_0.0_0.0

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

boundary_walls_on no
periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 20
config_at_end yes

colloid_io_freq 1000
colloid_io_format_output ASCII

###############################################################################
#
#  Miscellaneous
#
###############################################################################

random_seed 8361235
